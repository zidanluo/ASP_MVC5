@model PersonalWebApp.Models.ResumeModel
@{
    ViewBag.Title = "Resume";
}
<h1>Resume</h1>

@using (Html.BeginForm("ViewResume", "Home", FormMethod.Post, new { @class = "pure-form pure-form-aligned" }))
{
    @Html.ValidationSummary(false, "Access Denined")

    <fieldset>
        <div class="pure-control-group">
            @Html.LabelFor(x => x.AccessCode)
            @Html.TextBoxFor(x => x.AccessCode)
            @Html.ValidationMessageFor(x => x.AccessCode)
        </div>

        <div class="pure-controls">
            <button type="submit" class="pure-button pure-button-primary"><i class="fa fa-sign-in"></i>View</button>
        </div>
    </fieldset>
}
